{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        },
        "typeRoots": ["./types"],
        "rootDir": "src",
    },
    "ts-node": {
        // these options are overrides used only by ts-node
        "compilerOptions": {
            "module": "commonjs"
        }
    },
    "include": [
        "src/app.ts"
    ],
    "exclude": ["node_modules"]
}